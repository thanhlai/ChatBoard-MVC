@model ChatBoard.Models.Post

@{
    ViewBag.Title = "Create";
}
<div class="container margin-top-a-bit">
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                @using (Html.BeginForm("Create", "Post", FormMethod.Post, new { @class="form-horizontal"}))
                {
                    @Html.AntiForgeryToken()
                        <fieldset>
                            <legend class="text-center">Create A New Post</legend>
                            <!-- Title input-->
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="name">Title:</label>
                                <div class="col-md-9">
                                    <input id="Title" name="Title" type="text" placeholder="Title" class="form-control">
                                </div>
                            </div>

                            <!-- Tag input -->
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="name">Tag:</label>
                                <div class="col-md-9">
                                    <input id="tag" name="tag" type="text" placeholder="Separate tags with comma" class="form-control">
                                </div>
                            </div>

                            <!-- Message body -->
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="message">Content: </label>
                                <div class="col-md-9">
                                    <textarea class="form-control" style="overflow:auto;resize:none" id="Content" name="Content" placeholder="Please enter your content here..." rows="8"></textarea>
                                </div>
                            </div>

                            <!-- Form actions -->
                            <div class="form-group">
                                <div class="col-md-4 text-right">
                                    <button type="submit" class="btn btn-sm btn-success btn-lg">Submit</button>
                                </div>
                            </div>
                        </fieldset>
                }
            </div>
        </div>
    </div>
</div>
